@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<body>
    <div class="container" style="height: 100vh;">
        <div class="row">
            <div class="card text-center col-md-5 mt-3 col-sm-10 p-0">
                <div class="card-header p-0">
                    <img src="~/assets/images/ResendEmail.gif" alt="ResendImage" class="w-100">
                </div>
                <div class="card-body">
                    <h2>@ViewData["Title"]</h2>
                    <p>Please check your email to reset your password.</p>
                </div>
            </div>
        </div>
    </div>
</body>

<style>
    body {
        background-image: url('/assets/images/bg3.jpg');
        color: rgb(190, 190, 190);
    }

    .card {
        box-shadow: 0px -3px 6px 0px rgb(49 201 232);
        border-radius: 30px;
        justify-content: center;
        background: #0f5056 !important;
    }

    .card-body {
        background: #ffffff;
        color: #000000;
    }
    .card-header {
        border-radius: 30px !important;
        border: 0px;
        background: #842222;
    }

        .card-header img {
            border-radius: 30px;
        }

    .row {
        transform: translateY(25%);
        justify-content: center;
        margin: 0 20px;
    }
</style>
