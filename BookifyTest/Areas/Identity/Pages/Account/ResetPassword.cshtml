@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}



<style media="screen">
    *,
    *:before,
    *:after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #080710;
    }

    .background {
        width: 430px;
        height: 520px;
        position: absolute;
        transform: translate(-50%,-50%);
        left: 50%;
        top: 50%;
        margin-top: 500px;
    }

        .background .shape {
            height: 200px;
            width: 200px;
            position: absolute;
            border-radius: 50%;
        }

    .shape:first-child {
        background: linear-gradient( #1845ad, #23a2f6 );
        left: -80px;
        top: -80px;
    }

    .shape:last-child {
        background: linear-gradient( to right, #ff512f, #f09819 );
        right: -30px;
        bottom: -80px;
    }

    form {
        min-height: 520px;
        width: 400px;
        background-color: white;
        position: absolute;
        transform: translate(-50%,-50%);
        top: 49%;
        left: 49%;
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.1);
        box-shadow: 0 0 40px rgba(8,7,16,0.6);
        padding: 30px 35px 20px 35px;
        margin-top: 450px;
    }

        form * {
            font-family: 'Poppins',sans-serif;
            color: black;
            letter-spacing: 0.5px;
            outline: none;
            border: none;
        }

        form h3 {
            font-size: 32px;
            font-weight: 500;
            line-height: 42px;
            text-align: center;
        }

    label {
        display: block;
        margin-top: 20px;
        font-size: 16px;
        font-weight: 500;
    }

    input {
        border: 1px solid #0000006e;
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(255,255,255,0.07);
        border-radius: 6px;
        padding: 0 10px;
        margin-top: 8px;
        font-size: 14px;
        font-weight: 300;
        letter-spacing: 2px;
        background-color: #deefff21;
    }

        input::placeholder {
            color: #000000a8;
        }

        input:focus {
            border: 1px solid #007aff;
        }

    button {
        margin-top: 30px;
        width: 100%;
    }
    #Input_Email-error,
    #Input_Password-error,
    #Input_ConfirmPassword-error,
    .model-errors ul li {
        color: #ff0000 !important;
    }
</style>
<body>
    <div class="background background-login">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form method="post" class="form-login">
        <div class="d-flex justify-content-center align-items-center flex-column">
            <div>
                <h2>Setup New Password</h2>
            </div>
            <div>
                <img src="~/assets/images/newpassword.svg" alt="ImageNewPassword" style="width: 100%;" />
            </div>
        </div>
       
        <input asp-for="Input.Code" type="hidden" />

        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" placeholder="Email" aria-required="true" autocomplete="off" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <label asp-for="Input.Password"></label>
        <input type="password" asp-for="Input.Password" placeholder="Password" autocomplete="off">
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" placeholder="Repeat your password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <button type="submit" class="btn btn-lg btn-primary">Submit</button>

        <div style="margin-top: 20px; text-align: center;">
            <a id="forgot-password" asp-page="./Login" asp-route-returnUrl="/">Sing in</a>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger model-errors"></div>
    </form>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
