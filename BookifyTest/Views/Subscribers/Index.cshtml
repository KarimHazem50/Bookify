@model SearchFormViewModel
@{
    ViewData["Title"] = "Subscribers";
}
<!-- /.card -->
<div class="card">
    <div class="card-header d-flex justify-content-center align-items-center py-4">
        <div class="d-flex align-items-center">
            <span class="h2 mb-0">Find a subscriber</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-lightbulb-fill" style="margin-top: -3px; margin-left: 15px; fill: #969696;" viewBox="0 0 16 16">
                <path d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13h-5a.5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm3 8.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1-.5-.5z" />
            </svg>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body" style="padding: 50px">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <form asp-action="Search" data-ajax="true" data-ajax-method="post" data-ajax-update="#Result" data-ajax-failure="showErrorMessage"  data-ajax-complete="allowSubmitButtonForm">
                            <div class="input-group">
                                <input type="search" class="form-control form-control-lg" placeholder="Search by mobile, national ID or email ..." autocomplete="off" asp-for="Value">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-lg btn-default js-indicator">
                                        <span class="input-btn-form-submit"><i class="fa fa-search"></i></span>
                                        <span class="spinner-border-sm js-indicator-spinner" role="status" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<div id="Result"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}