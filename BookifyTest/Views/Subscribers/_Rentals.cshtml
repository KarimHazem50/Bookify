@model IEnumerable<RentalViewModel>

<!--begin::Alert-->
<div id="AlertNotRentals" class="alert alert-info align-items-center justify-content-center mt-4 py-3 @(Model.Any() ? "d-none" : "d-flex" )" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </svg>
    <div class="ml-3">
        <h5 class="mb-0">This subscriber has no rentals yet.</h5>
    </div>
</div>
<!--end::Alert-->
<!--begin::Table-->
<table id="RentalsTable" class="table table-bordered text-center align-middle @(Model.Any() ? string.Empty : "d-none" )" style="line-height: 2">
    <!--begin::Table head-->
    <thead>
        <tr>
            <th>Start Date</th>
            <th>Number of Copies</th>
            <th>Total Delay (Days)</th>
            <th>Add On</th>
            <th></th>
        </tr>
    </thead>
    <!--end::Table head-->
    <!--begin::Table body-->
    <tbody>
        @foreach (var rental in Model)
        {
            <tr data-copies = @rental.NumbersOfCopies>
                <td>
                    @rental.StartDate.ToString("d MMM, yyyy")
                </td>
                <td>
                    @rental.NumbersOfCopies
                </td>
                <td>
                    @rental.TotalDelayInDays
                </td>
                <td>
                    @rental.CreatedOn
                </td>
                <td class="text-end pe-4">
                    @if (rental.CreatedOn.Date == DateTime.Today)
                    {
                        <a href="javascript:;" class="btn btn-sm btn-outline-danger js-cansel-rental" data-id="@rental.Id">Cansel</a>
                    }
                    <a asp-controller="Rentals" asp-action="Details" asp-route-id=@rental.Id class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
    <!--end::Table body-->
</table>
<!--end::Table-->
