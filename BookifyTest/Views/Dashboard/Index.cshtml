@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section CustomCss {
<link href="~/lib/apexcharts/apexcharts.min.css" rel="stylesheet" />
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col">
                <div class="card" style="background-color:#020202;background-image:url('assets/images/books-bg.webp'); background-size: cover; height: 300px;">
                    <div class="card-body d-flex justify-content-between flex-column">
                        <div class="px-5 py-4 mt-1 mx-4 glass" style="width: fit-content;">
                            <h3 class="text-white mb-2 custom-header" style="font-size: 60px; font-weight: bold;">Bookify</h3>
                            <span class="text-white d-block mb-3" style="font-weight: bold;">Books are the best friends you'll never meet</span>
                            <div class="d-flex align-items-center" style="gap: 35px;">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-book text-white mr-2"></i>
                                    <span class="fw-semibold text-white">@Model.NumberOfCopies+ books</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users text-white mr-2"></i>
                                    <span class="fw-semibold text-white fs-6">@Model.NumberOfSubscribers subsciber</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-center p-4">
                        <h3 class="card-title" style="font-size: 25px; font-weight: bold;">Resently Added Books</h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="users-list clearfix p-4">
                            @foreach (var book in Model.LastAddBooks)
                            {
                                <li class="custom-height">
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                        <img src="~/Images/books/Thumb/@(book.ImageName is null ? "image-placeholder.jpg" : book.ImageName)" alt="Book Image" class="mb-2" style="border-radius: 6px; max-height: 250px;">
                                        <h6 class="mb-1" style="font-weight: bold;">@book.Title</h6>
                                    </a>
                                    <span class="users-list-date">@book.AuthorName</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4 card">
                <div class="card-header px-1 py-4">
                    <h3 class="card-title" style="font-size: 20px; font-weight: bold;">Top Books</h3>
                </div>
                <div class="card-body p-0">
                    <ul class="products-list product-list-in-card pl-2 pr-2">
                        @foreach (var book in @Model.TopBooks)
                        {
                            <li class="item">
                                <a class="d-flex" asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                    <img src="~/Images/books/Thumb/@(book.ImageName is null ? "image-placeholder.jpg" : book.ImageName)" alt="Book Image" style="width: 60px">
                                    <div class="ml-3">
                                        <h6 class="product-title">
                                            @book.Title
                                        </h6>
                                        <span class="product-description">
                                            @book.AuthorName
                                        </span>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-8">
                <div class="card" style="min-height: 570px">
                    <div class="card-header p-4 row">
                        <div class="col-12 d-flex justify-content-between">
                            <h3 class="card-title" style="font-size: 25px; font-weight: bold;">Rentals Per Day</h3>
                            <div id="DateRangeBicker" style="cursor: pointer; padding: 5px 10px; border: 1px solid #ccc;">
                                <i class="far fa-calendar-alt"></i>
                                <span id="DateSelected"></span>
                                <i class="fas fa-caret-down"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="p-3">
                            <div id="RentalsPerDay"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" style="min-height: 570px">
                    <div class="card-header p-4">
                        <div class="d-flex justify-content-center">
                            <h3 class="card-title" style="font-size: 20px; font-weight: bold;">Subscribers Per City</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="px-3 pt-5 mt-5">
                            <div id="SubscribersPerCity"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Plugins {
    <script src="~/lib/apexcharts/apexcharts.min.js"></script>
}
@section Scripts {
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}