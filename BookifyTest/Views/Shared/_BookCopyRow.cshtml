@model BookCopyViewModel
<tr>
    <td>
        <span class="badge badge-pill badge-info  py-1 px-2" style="font-size: 14px; letter-spacing: 1px">@Model.SerialNumber</span>
    </td>
    <td>
        <span class="badge badge-pill badge-info py-1 px-2" style="font-size: 14px; letter-spacing: 1px">@Model.EditionNumber</span>
    </td>
    <td>
        <span class="badge badge-@(Model.IsDeleted ? "danger" : (Model.IsAvailableForRentalForMainBook ? (Model.IsAvailableForRental ? "primary" : "warning") : "warning")) py-1 px-2">
            @(Model.IsDeleted ? "Deleted" : Model.IsAvailableForRentalForMainBook ? Model.IsAvailableForRental ? "Available" : "Not Available" : "Not Available")
        </span>
    </td>
    <td>
        <span class="badge badge-@(Model.IsDeleted ? "danger" : "primary") py-1 px-2">
            @(Model.IsDeleted ? "Deleted" : "Available")
        </span>
    </td>
    <td>@Model.CreatedOn.ToString("dd MMM yyyy hh:mm tt")</td>
    <td>
        <div class="btn-group dropleft">
            <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-grid-fill" viewBox="0 0 16 16">
                    <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z" />
                </svg>
            </button>
            <div class="dropdown-menu py-0">
                <a href="javascript:;" class="dropdown-item js-render-modal" data-title="Edit Copy" data-url="/BookCopies/Edit/@Model.Id" data-edit="Yes">Edit</a>
                <a href="javascript:;" class="dropdown-item js-status-copy" data-url="/BookCopies/ToggleStatus/@Model.Id">Toggle Status</a>
            </div>
        </div>
    </td>
</tr>