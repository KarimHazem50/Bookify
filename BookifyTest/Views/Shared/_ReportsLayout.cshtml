@using System.Drawing
@inject IWebHostEnvironment webHostEnvironment
@{
    using var image = Image.FromFile($"{webHostEnvironment.WebRootPath}/assets/images/logo.png");
    using var stream = new MemoryStream();
    image.Save(stream, image.RawFormat);

    var imageSrc = Convert.ToBase64String(stream.ToArray());
}

<!DOCTYPE html>
<html>
<head>
    <style>
        #data {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #data td, #data th {
                border: 1px solid #ddd;
                padding: 8px;
            }
             #data td {
                font-size: 12px;
             }
            #data th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: center;
                background-color: #000;
                color: white;
                font-size: 14px;
                font-weight: bold;
            }
            #data tr:nth-child(even){background-color: #f2f2f2;}
            .logo-continer{
                text-align: center;
            }
            #Logo{
                width: 200px;
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div class="logo-continer">
        <img id="Logo" src="data:image/png;base64,@imageSrc" />
    </div>
    @RenderBody()
</body>
</html>
