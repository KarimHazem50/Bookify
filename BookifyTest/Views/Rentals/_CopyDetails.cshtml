@model BookCopyViewModel
<div class="CopyRow">
    <div class="row justify-content-between align-items-center mb-3">
        <input id="HiddenInput" type="hidden" value="@Model.SerialNumber" class="js-copy" data-book-id="@Model.BookId" />
        <div class="d-flex align-items-center sorting_1">
            <div class="symbol symbol-circle symbol-50px overflow-hidden mr-3">
                <div id="DispalyImage" class="symbol-label">
                    <img src="~/Images/books/Thumb/@Model.ImageName" alt="@Model.BookTitle" class="w-100">
                </div>
            </div>
            <div class="d-flex flex-column">
                <p id="BookTitle" class="mb-1 h5">@Model.BookTitle</p>
                <span class="text-secondary text-left">Edition# @Model.EditionNumber</span>
            </div>
        </div>
        <div class="col-2">
            <a href="javascript:;" class="btn btn-outline-danger js-remove-copy">Remove</a>
        </div>
    </div>
    <hr style="background-color: violet; opacity: 0.5;" />
</div>