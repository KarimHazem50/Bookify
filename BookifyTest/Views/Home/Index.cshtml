@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column page-bg" style="height: 100vh">
    <div class="col-12 col-md-8">
        <div class="row d-flex justify-content-center align-items-center">
            <div style="padding: 100px 10px;">
                <a href="/">
                    <img alt="Logo" src="~/assets/images/logo.png" style="width: 200px" />
                </a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8 col-md-5">
                <div class="card mh-450px" style="background-color: #A838FF">
                    <div class="card-body d-flex flex-column pb-0" style="padding-top: 100px;">
                        <div class="text-center">
                            <h3 class="text-white text-center text-uppercase mb-3 p-4" style="font-weight: bold">Bookify Staff</h3>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary text-white text-uppercase" style="background-color: #ffffff3b; font-weight: bold">
                                Go To Dashboard
                            </a>
                        </div>
                        <img style="width: 300px; margin: auto;" src="~/assets/images/staff.png" />
                    </div>
                </div>
            </div>
            <div class="col-8 col-md-5">
                <div class="card mh-450px bg-primary">
                    <div class="card-body d-flex flex-column pb-0" style="padding-top: 100px;">
                        <div class="text-center">
                            <h3 class="text-white text-center text-uppercase mb-3 p-4" style="font-weight: bold">Find A Book</h3>
                            <a asp-controller="Search" asp-action="Index" class="btn btn-primary text-white text-uppercase" style="background-color: #ffffff3b; font-weight: bold">
                                Go To Books Finder
                            </a>
                        </div>
                        <img style="width: 348px; margin: auto;" src="~/assets/images/search.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-8 col-md-3 sidebar-home" style="background-color: #1b128069; margin-top: -5px; padding: 30px 10px; align-items: center;">
            <div class="mb-2 text-center">
                <h2 class="text-white">Newly Added Books</h2>
             </div>
            <div class="card w-100" style="background-color: transparent; overflow: auto;">                
                <div class="card-body px-3">
					@foreach (var book in Model)
					{
					<a class="d-flex text-white" asp-controller="Search" asp-action="Details" asp-route-bkey="@book.Key">
						<img src="/Images/books/Thumb/@(book.ImageName is null ? "image-placeholder.jpg" : book.ImageName)" alt="Book Image" style="width: 50px">
							<div class="ml-3 py-3">
								<h6>@book.Title</h6>
								<span>@book.AuthorName</span>
							</div>
						</a>
						<hr style="background-color: white; margin-left: -10px; opacity: 0.5;" />
				}
                </div>
            </div>
    </div>
</div>